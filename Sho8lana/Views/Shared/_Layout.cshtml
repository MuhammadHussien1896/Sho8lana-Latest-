    <script>
        function validation(){
            let x = document.forms["SearchForm"]["text"].value;
                if (x == "") {
                    document.querySelector(".text-validation").classList.remove("d-none");
                    return false;
                }
            }
            $(window).scroll(()=>{

                if($(window).scrollTop()>70){
                    $("#PopoverContent").css("background","transparent")
                }
                else{
                    $("#PopoverContent").css("background","linear-gradient(45deg, rgba(86, 58, 250, 0.9) 0%, rgba(116, 15, 214, 0.9) 100%), url(../img/hero-bg.jpg) center center no-repeat")
                }
            })
        $(function () {
            $('[data-bs-toggle="popover"]').popover({
                html: true,
                placement: 'bottom',
                sanitize: false,
                content: function () {
                    return $("#PopoverContent").html();
                }
            });
         })
         $(".rateyo").rateYo();
    </script>

