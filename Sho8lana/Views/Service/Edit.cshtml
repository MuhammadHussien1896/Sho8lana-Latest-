<div class="container">
    <div class="row">
        <h4>Update Your Service</h4>
        <hr />
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ServiceId" />
                <input asp-for="Title" type="hidden" />
                <input asp-for="CustomerId" type="hidden" />
                
                <div class="form-group mb-3">
                    <label asp-for="CategoryId" class="control-label">Category</label>
                    <select asp-for="CategoryId" class ="form-select" asp-items="ViewBag.CategoryId">
                        <option selected>Select Category ....</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea rows="6" asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
               
                <div class="form-group mb-3">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerInstructions" class="control-label">Customer Instructions</label>
                    <textarea rows="6" asp-for="CustomerInstructions" class="form-control"></textarea>
                    <span asp-validation-for="CustomerInstructions" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Medias" class="control-label">Upload Another Images (Maximum 4 images)</label>
                    <input asp-for="Medias" class="form-control" type="file" value="Upload" multiple/>
                    <span asp-validation-for="Medias" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Payment Method</label>
                </div>
                <div class="form-check form-check-inline mb-3">
                  <input class="form-check-input" type="checkbox">
                  <label class="form-check-label">Online</label>
                </div>
                <div class="form-check form-check-inline mb-3">
                  <input class="form-check-input" asp-for="IsCash">
                  <label class="form-check-label">Cash</label>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Service Type</label>
                </div>
                <div class="form-group form-check-inline mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsFreelancer" /> 
                        <label class="form-check-label">Freelancer</label>
                    </label>
                </div>
                <div class="form-group form-check-inline mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" /> 
                        <label class="form-check-label">Client</label>
                    </label>
                </div>
               
            
                <div class="form-group mb-3">
                    <input type="submit" value="Edit" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>
  </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
