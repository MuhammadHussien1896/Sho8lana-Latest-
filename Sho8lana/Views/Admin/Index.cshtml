@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Admin Control Panel";
}
<div class="row my-5 h-100">
    <ul class="nav nav-tabs m-auto col-12" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Verfied Customers</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Unverfied Customers</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-bs-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Customers</a>
      </li>
    </ul>
    <div class="tab-content col-12 m-auto mt-4" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
          <table class="table-primary table-striped table-hover mt-4  ">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.IsPremium)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.ProfileImage)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.NationalIdImage)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <th>
                 @Html.DisplayFor(modelItem => item.IsPremium)
            </th>
            <th>
                 @Html.DisplayFor(modelItem => item.Gender)
            </th>
            <th>
                 @Html.DisplayFor(modelItem => item.City)
            </th>
            <th>
                 @Html.DisplayFor(modelItem => item.Area)
            </th>
            <th>
                 @Html.DisplayFor(modelItem => item.Balance)
            </th>
            <th>
                 @Html.DisplayFor(modelItem => item.PhoneNumber)
            </th>
            <th>
                 @Html.DisplayFor(modelItem => item.ProfileImage)
            </th>
            <th>
                 @Html.DisplayFor(modelItem => item.NationalIdImage)
            </th>
            <td>
            
                <a asp-action="ShowDetails" class="btn btn-primary" > Show Service Details</a> 
               
            </td>
        </tr>
}
    </tbody>
</table>
      </div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

      </div>
      <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">

      </div>
    </div>
</div>

<script>
        $("#profile-tab").click(()=> {
        $.ajax({  
            type: 'Get',  
            url: '@Url.Action("UnverifiedUsers","JsonApi")',  
            dataType: "json",  
            success: (data)=> {
                if(data.length>0){
                    console.log(data)
                }
            },  
            error: function (ex) {  
                console.log(ex)
            }
    });  
 })
         $("#contact-tab").click(()=> {
        $.ajax({  
            type:'Get',  
            url:'@Url.Action("RestOfCustomers","JsonApi")',  
            dataType:"json",  
            success: (data)=> {
                $("#contact").html(
                ` <table class="table table-striped table-hover mt-4 w-100 table-bordered  ">
                      <thead>
                               <tr class="table-primary">
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
           
                                    <th>
                                        @Html.DisplayNameFor(model => model.FirstName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LastName)
                                    </th>
                                    <th>
                                         @Html.DisplayNameFor(model => model.IsPremium)
                                    </th>
                                    <th>
                                         @Html.DisplayNameFor(model => model.Gender)
                                    </th>
                                    <th>
                                         @Html.DisplayNameFor(model => model.City)
                                    </th>
                                    <th>
                                         @Html.DisplayNameFor(model => model.Area)
                                    </th>
                                    <th>
                                         @Html.DisplayNameFor(model => model.Balance)
                                    </th>
                                    <th>
                                         @Html.DisplayNameFor(model => model.PhoneNumber)
                                    </th>
                                    <th>
                                         @Html.DisplayNameFor(model => model.ProfileImage)
                                    </th>
                                    <th>
                                         @Html.DisplayNameFor(model => model.NationalIdImage)
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="Tbody">
                               </tbody>
                        </table>
                            `);
                            var res="";
                 $.each(data,function(i,item){
                    res+=        `<tr>
                                    <td>
                                        ${item.userName}
                                    </td>
                                    <td>
                                        ${item.email}
                                    </td>
           
                                    <td>
                                        ${item.firstName}
                                    </td>
                                    <td>
                                        ${item.lastName}
                                    </td>
                                    <th>
                                         ${item.isPremium}
                                    </th>
                                    <th>
                                         ${item.gender}
                                    </th>
                                    <th>
                                         ${item.city}
                                    </th>
                                    <th>
                                         ${item.area}
                                    </th>
                                    <th>
                                         ${item.balance}
                                    </th>
                                    <th>
                                         ${item.phoneNumber}
                                    </th>
                                    <th>
                                         ${item.profileImage}
                                    </th>
                                    <th>
                                         ${item.nationalIdImage}
                                    </th>
                                    <td>
            
                                        <a asp-action="ShowDetails" class="btn btn-primary" > Show Service Details</a> 
               
                                    </td>
                                </tr>`
                            });
                            console.log(res)
            $("#Tbody").html(res);

            },  
            error: function (ex) {  
                console.log(ex)
            }
    });  
 })
</script>