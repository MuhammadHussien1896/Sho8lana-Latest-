@model IEnumerable<Sho8lana.Models.Category>

@{
    ViewData["Title"] = "Show Categories";
    Layout = "_AdminLayoutModified";


}

<div class="row justify-content-around">
    <div class="row col-lg-7">
    <a class="btn col-lg-3 mb-4 ml-8 mt-3 myBtn" asp-action="CreateCategory">
    <i class="bi bi-plus"></i>
    إضافة قسم جديد
    </a>

<div class=" mt-8">
    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            No Category found!
        </div>
    }
    else
    {
        <div class="row flex-column">
            @foreach (var item in Model)
            {
              <div class="col-12 ">
                  <div class="card mb-3" >
                      <div class="row g-0">
                        <div class="col-md-4">
                          <img src="~/Images/CategoriesImage/@item.CategoryImg" class="img-fluid rounded-start" alt="CategoryImg">
                        </div>
                        <div class="col-md-8">
                          <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>

                          </div>
                        </div>
                      </div>
                    </div>

              </div>
            }
        </div>
    }
</div>
</div>
</div>


















