@model Sho8lana.Models.Customer
@{
    ViewData["Title"] = "VerifingPage";
    Layout = "_AdminLayout";
}


<div class="row col-sm-12 col-lg-9 mb-3 mt-3 flex-column align-items-center">

<div class="card text-dark bg-light col-sm-12 col-md-6 ">
   <div class="row col-12 justify-content-around">
       <div class="col-5"><img class="profile-picture " src="data:image/*;base64,@Convert.ToBase64String(@Model.ProfilePicture)" height="200px" /></div>
       <div class="col-5"><img class="profile-picture " src="data:image/*;base64,@Convert.ToBase64String(@Model.NationalIdPicture)" height="200px" /></div>
       
   </div>
 

  <div class="card-body ms-1">
    <h5 class="card-title">Phone Number</h5>
    <p class="card-text-muted">@Model.PhoneNumber</p>
  </div>
  
  <div class="card-body">
     
        
      <form asp-controller="Admin" asp-action="VerifyUser" asp-route-id="@Model.Id">
          <input type="submit" class="btn btn-success mb-3" value="Verify"/>
      </form>
      <form  asp-controller="Admin" asp-action="RejectUser" asp-route-id="@Model.Id" >
          <input type="submit"class="btn btn-danger" value="Reject"/>
      </form>
      
    
  </div>
</div>
</div>
