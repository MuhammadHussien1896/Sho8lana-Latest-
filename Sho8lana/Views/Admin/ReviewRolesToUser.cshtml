@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
    Layout = "_AdminLayoutModified";
}
@*h1>Users</h1>*@
<div class="row col-sm-12 col-lg-9 ms-5" style="direction:rtl">
    <div class="tab-content  col-9 m-auto mt-4 overflow-auto" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
             <table class="table table-striped table-responsive align-middle  mt-4 w-60 table-bordered text-center overflow-scroll">
                 <thead style="background:#8824dc;" class="text-white">
                     <tr>
                         <th>الأسم الأول</th>
                         <th>الأسم الأخير</th>
                         <th>البريد الإلكتروني</th>
                         <th>الأدوار</th>
                         <th>الإدارة</th>
                     </tr>
                 </thead>
                 <tbody>
                    @foreach(var user in Model)
                    {
                        <tr class="table-light">
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>                
                            <td>@user.Email</td>
                            <td>@string.Join(" , ",user.Roles.ToList())</td>
                            <td>
                                <a class="btn myBtn" asp-controller="Admin" asp-action="ManageRoles" asp-route-userId="@user.Id">إدارة الأدوار</a>
                            </td>
                        </tr>
                    }
                </tbody>
             </table>
             
 </div>
 </div>
 </div>