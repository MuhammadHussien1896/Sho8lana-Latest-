@model CustomerRequestViewModel
@{
    ViewData["Title"] = "الطلبات";
}

<div class="row">
  <div class="col-3">
    <!-- Tab navs -->
    <div
      class="nav flex-column nav-tabs text-center"
      id="v-tabs-tab"
      role="tablist"
      aria-orientation="vertical"
    >
      <a
        class="nav-link active"
        id="v-tabs-home-tab"
        data-mdb-toggle="tab"
        href="#v-tabs-home"
        role="tab"
        aria-controls="v-tabs-home"
        aria-selected="true"
        >الطلبات الواردة</a
      >
      <a
        class="nav-link"
        id="v-tabs-profile-tab"
        data-mdb-toggle="tab"
        href="#v-tabs-profile"
        role="tab"
        aria-controls="v-tabs-profile"
        aria-selected="false"
        >الطلبات الصادرة</a
      >
      
    </div>
    <!-- Tab navs -->
  </div>

  <div class="col-9">
    <!-- Tab content -->
    <div class="tab-content" id="v-tabs-tabContent">
      <div
        class="tab-pane fade show active"
        id="v-tabs-home"
        role="tabpanel"
        aria-labelledby="v-tabs-home-tab"
      >

        <h1 class="text-center">الطلبات الواردة</h1>

            @if(Model.IncomingRequests.Count() == 0)
            {
                <h1 class="text-center">لا يوجد طلبات واردة حالياَ</h1>
            }
            else
            {
                foreach(var request in Model.IncomingRequests)
                {
                    <div class="card mt-3">
                        <div class="card-header">
                                @request.Customer.FirstName @request.Customer.LastName لديك طلب قادم من طرف  
                        </div>
                        <div class="card-body">
                        <h5 class="card-title">@request.Service.Title عن خدمة</h5>
                        <p class="card-text"> يريد بدأ التعاقد معك @request.Customer.FirstName @request.Customer.LastName
                            <br/>
                            <small class="text-muted">@request.RequestDate : تاريخ الطلب </small>
                        </p>
                        <a href="#" class="btn btn-primary">قبول الطلب</a>
                        @*<a href="#" class="btn btn-danger">Cancel Request</a>*@
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                          إلغاء الطلب
                        </button>
                        </div>
                    </div>
                }
                        <!-- Button trigger modal -->
                        @*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                          Launch static backdrop modal
                        </button>*@

                        <!-- Modal -->
                        @*<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">أنت على وشك إلغاء الطلب هل أنت متأكد ؟</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                بالضغط على زر المسح سيتم مسح الطلب نهائياً !
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">العودة</button>
                                <button type="button" class="btn btn-danger" asp-controller="Customer" asp-action="DeleteRequest">مسح الطلب</button>
                              </div>
                            </div>
                          </div>
                        </div>*@

            }


        
      </div>
      <div
        class="tab-pane fade"
        id="v-tabs-profile"
        role="tabpanel"
        aria-labelledby="v-tabs-profile-tab"
      >
       <h1 class="text-center">الطلبات الصادرة</h1>

            @if(Model.OutgoingRequests.Count() == 0)
            {
                <h1 class="text-center mt-5">لا يوجد طلبات صادرة حالياً</h1>
            }
            else
            {
                foreach(var request in Model.OutgoingRequests)
                {
                    <div class="card mt-3">
                        @if (request.Service.IsFreelancer)
                        {
                            <div class="card-header">
                               @request.Service.Customer.FirstName @request.Service.Customer.LastName لقد طلبت خدمة من العميل 
                            </div>
                        }
                        else
                        {
                            <div class="card-header">
                                @request.Service.Customer.FirstName @request.Service.Customer.LastName لقد ارسلت طلب عمل للعميل  
                            </div>
                        }
                        <div class="card-body">
                        <h5 class="card-title"> @request.Service.Title عن خدمة</h5>
                        <p class="card-text">تذكر يمكنك إلغاء الطلب في أي وقت قبل قبوله من الطرف الاخر   
                            <br/>
                            <small class="text-muted">@request.RequestDate : تاريخ الطلب</small>
                        </p>
                        @*<a href="#" class="btn btn-danger">إلغاء الطلب</a>*@
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                          إلغاء الطلب
                        </button>
                        </div>
                    </div>
                }
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">أنت على وشك إلغاء الطلب هل أنت متأكد ؟</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                بالضغط على زر المسح سيتم مسح الطلب نهائياً !
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">العودة</button>
                                <button type="button" class="btn btn-danger" asp-controller="Customer" asp-action="DeleteRequest">مسح الطلب</button>
                              </div>
                            </div>
                          </div>
                        </div>
            } 

      </div>
      
    </div>
    <!-- Tab content -->
  </div>
</div>

