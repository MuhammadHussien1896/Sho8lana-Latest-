@model IEnumerable<CustomerRequest>
@{
    ViewData["Title"] = "IncomingRequests";
}

<h1 class="text-center">IncomingRequests</h1>

@if(Model.Count() == 0)
{
    <h1 class="text-center">There is no incoming Requests</h1>
}
else
{
    foreach(var request in Model)
    {
        <div class="card">
            <div class="card-header">
                    Request comming from @request.Customer.FirstName @request.Customer.LastName 
            </div>
            <div class="card-body">
            <h5 class="card-title">About @request.Service.Title</h5>
            <p class="card-text">@request.Customer.FirstName @request.Customer.LastName wants to begin a contract with you !
                <small class="text-muted">@request.RequestDate</small>
            </p>
            <a href="#" class="btn btn-primary">Accept Request</a>
            @*<a href="#" class="btn btn-danger">Cancel Request</a>*@
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
              Cancel Request
            </button>
            </div>
        </div>
    }
            <!-- Button trigger modal -->
            @*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
              Launch static backdrop modal
            </button>*@

            <!-- Modal -->
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Are you sure to cancel this request ?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    By clicking delete request your request will be deleted permanently !
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" asp-controller="Customer" asp-action="DeleteRequest">Delete Request</button>
                  </div>
                </div>
              </div>
            </div>

}

