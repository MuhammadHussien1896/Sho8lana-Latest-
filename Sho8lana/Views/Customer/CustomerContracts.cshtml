@using Microsoft.AspNetCore.Identity
@model ContractViewModel
@inject UserManager<Customer> UserManager
@{
    ViewData["Title"] = "العقود";
}

<div class="row">
      <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
          <a class="list-group-item list-group-item-action active" id="list-home-list" data-bs-toggle="list" href="#list-home" role="tab" aria-controls="list-home">العقود المنتظرة</a>
          <a class="list-group-item list-group-item-action" id="list-home2-list" data-bs-toggle="list" href="#list-home2" role="tab" aria-controls="list-home2">العقود في انتظار الدفع</a>
          <a class="list-group-item list-group-item-action" id="list-profile-list" data-bs-toggle="list" href="#list-profile" role="tab" aria-controls="list-profile">العقود قيد التنفيذ</a>
          <a class="list-group-item list-group-item-action" id="list-messages-list" data-bs-toggle="list" href="#list-messages" role="tab" aria-controls="list-messages">العقود المنتهية</a>
      </div>
      </div>
      <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
          <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">

            @if(Model.PendingContracts.Count() == 0)
            {
                <h1 class="text-center mt-5">لا توجد عقود في انتظار البدء</h1>
            }
            else
            {
                foreach(var contract in Model.PendingContracts)
                {
                    <div class="card mt-3">
                        <div class="card-header">
                               عقد في إنتظار البدء لخدمة : @contract.Service.Title  
                        </div>
                        <div class="card-body">
                        @*<h5 class="card-title">@contract.Service.Title عن خدمة</h5>*@
                        
                        
                        @if(contract.ContractPrice == default && UserManager.GetUserId(User) == contract.CustomerId)
                        {
                           <p>السعر غير محدد حتى الآن ، من فضلك انتظر تحديد السعر من قبل ناشر الخدمة</p>
                        }
                        else if(contract.ContractPrice == default && UserManager.GetUserId(User) != contract.CustomerId)
                        {
                            <a class="btn btn-primary" asp-controller="Customer" asp-action="EditContractPrice" asp-route-id="@contract.ContractId">تحديد السعر</a>
                        }
                        
                        else
                        {
                            //im the buyer and buyer accepted the service
                            @if((UserManager.GetUserId(User) == contract.CustomerId && contract.BuyerAccepted)||(UserManager.GetUserId(User) != contract.CustomerId && contract.SellerAccepted))
                            {
                                <p>سعر الخدمة المتفق عليه : @contract.ContractPrice</p>
                                <p>لقد قبلت طلب العقد .. فى انتظار قبول الطرف الاخر</p>
                            }
                            
                            else
                            {
                                <p>سعر الخدمة المتفق عليه : @contract.ContractPrice</p>
                                <a class="btn btn-primary" asp-controller="Customer" asp-action="AcceptContract" asp-route-id="@contract.ContractId">قبول الطلب</a>
                            }      

                        }
                       
                                
                        @*<a href="#" class="btn btn-danger">Cancel Request</a>*@
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop2" onclick="request('@contract.ContractId')">
                          إلغاء الطلب
                        </button>
                        <a class="btn btn-outline-info" asp-controller="service" asp-action="details" asp-route-id="@contract.ServiceId" >تفاصيل الخدمة</a>
                        </div>
                    </div>
                }
                        <!-- Button trigger modal -->
                        @*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                          Launch static backdrop modal
                        </button>*@

                        <!-- Modal -->
                        <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel2" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel2">أنت على وشك إلغاء الطلب هل أنت متأكد ؟</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                بالضغط على زر المسح سيتم مسح الطلب نهائياً !
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">العودة</button>
                                <button id="deleteBtn" type="button" class="btn btn-danger">مسح الطلب</button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <script>
                            function request(requestId){
                                document.getElementById("deleteBtn").addEventListener("click",()=>{
                                    var link = '@Url.Action("DeleteContract","customer",new {id= "-1"})';
                                    link = link.replace("-1",requestId);
                                    window.location.href = link;
                                });
                            }
                        </script>

            }
          
          
          
          
          
          
          </div>


          <div class="tab-pane fade" id="list-home2" role="tabpanel" aria-labelledby="list-home2-list">

            @if(Model.PendingPaymentContracts.Count() == 0)
            {
                <h1 class="text-center mt-5">لا توجد عقود في انتظار الدفع</h1>
            }
            else
            {
                foreach(var contract in Model.PendingPaymentContracts)
                {
                    <div class="card mt-3">
                        <div class="card-header">
                                @contract.Customer.FirstName @contract.Customer.LastName لديك عقد في انتظار الدفع مع  
                        </div>
                        <div class="card-body">
                        <h5 class="card-title">@contract.Service.Title عن خدمة</h5>
                        <p class="card-text"> يريد بدأ التعاقد معك @contract.Customer.FirstName @contract.Customer.LastName
                        </p>
                        @*customer is buyer*@
                        @if(contract.Service.IsFreelancer && UserManager.GetUserId(User) == contract.CustomerId)
                        {
                            
                                <form asp-action="CreateCheckoutSession" asp-controller="payment" asp-route-CustomerId="@contract.CustomerId" asp-route-ContractId="@contract.ContractId" method="POST">
                                    <button type="submit" class="btn-primary btn">الانتقال للدفع</button>
                                </form>
                        }//service owner is buyer
                        else if(!contract.Service.IsFreelancer && UserManager.GetUserId(User) == contract.Service.CustomerId)
                        {
                                <form asp-action="CreateCheckoutSession" asp-controller="payment" asp-route-CustomerId="@contract.Service.CustomerId" asp-route-ContractId="@contract.ContractId" method="POST">
                                    <button type="submit" class="btn-primary btn">الانتقال للدفع</button>
                                </form>
                        }
                        else
                        {
                            <p>في انتظار المشتري لدفع الخدمة</p>
                        }
                                
                        @*<a href="#" class="btn btn-danger">Cancel Request</a>*@
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop2" onclick="request('@contract.ContractId')">
                          إلغاء الطلب
                        </button>
                        </div>
                    </div>
                }
                        <!-- Button trigger modal -->
                        @*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                          Launch static backdrop modal
                        </button>*@

                        <!-- Modal -->
                        <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel2" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel2">أنت على وشك إلغاء الطلب هل أنت متأكد ؟</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                بالضغط على زر المسح سيتم مسح الطلب نهائياً !
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">العودة</button>
                                <button id="deleteBtn" type="button" class="btn btn-danger">مسح الطلب</button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <script>
                            function request(requestId){
                                document.getElementById("deleteBtn").addEventListener("click",()=>{
                                    var link = '@Url.Action("DeleteContract","customer",new {id= "-1"})';
                                    link = link.replace("-1",requestId);
                                    window.location.href = link;
                                });
                            }
                        </script>

            }
          
          
          
          
          
          
          </div>





          <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">

            @if(Model.ActiveContracts.Count() == 0)
            {
                <h1 class="text-center mt-5">لا توجد عقود قيد التنفيذ</h1>
            }
            else
            {
                foreach(var contract in Model.ActiveContracts)
                {
                    <div class="card mt-3">
                        @if (contract.Service.IsFreelancer)
                        {
                            <div class="card-header">
                               @contract.Service.Customer.FirstName @contract.Service.Customer.LastName لقد طلبت خدمة من العميل 
                            </div>
                        }
                        else
                        {
                            <div class="card-header">
                                @contract.Service.Customer.FirstName @contract.Service.Customer.LastName لقد ارسلت طلب عمل للعميل  
                            </div>
                        }
                        <div class="card-body">
                        <h5 class="card-title"> @contract.Service.Title عن خدمة</h5>
                        <p class="card-text">تذكر يمكنك إلغاء الطلب في أي وقت قبل قبوله من الطرف الاخر   
                            
                        </p>
                        @*<a href="#" class="btn btn-danger">إلغاء الطلب</a>*@
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                          إلغاء الطلب
                        </button>
                        </div>
                    </div>
                }
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">أنت على وشك إلغاء الطلب هل أنت متأكد ؟</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                بالضغط على زر المسح سيتم مسح الطلب نهائياً !
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">العودة</button>
                                <button type="button" class="btn btn-danger" asp-controller="Customer" asp-action="DeleteRequest">مسح الطلب</button>
                              </div>
                            </div>
                          </div>
                        </div>
            } 
          
          </div>

          <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">
            
              @if(Model.DoneContracts.Count() == 0)
            {
                <h1 class="text-center mt-5">لا توجد عقود منتهية</h1>
            }
            else
            {
                foreach(var contract in Model.DoneContracts)
                {
                    <div class="card mt-3">
                        @if (contract.Service.IsFreelancer)
                        {
                            <div class="card-header">
                               @contract.Service.Customer.FirstName @contract.Service.Customer.LastName لقد طلبت خدمة من العميل 
                            </div>
                        }
                        else
                        {
                            <div class="card-header">
                                @contract.Service.Customer.FirstName @contract.Service.Customer.LastName لقد ارسلت طلب عمل للعميل  
                            </div>
                        }
                        <div class="card-body">
                        <h5 class="card-title"> @contract.Service.Title عن خدمة</h5>
                        <p class="card-text">تذكر يمكنك إلغاء الطلب في أي وقت قبل قبوله من الطرف الاخر   
                            
                        </p>
                        @*<a href="#" class="btn btn-danger">إلغاء الطلب</a>*@
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                          إلغاء الطلب
                        </button>
                        </div>
                    </div>
                }
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">أنت على وشك إلغاء الطلب هل أنت متأكد ؟</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                بالضغط على زر المسح سيتم مسح الطلب نهائياً !
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">العودة</button>
                                <button type="button" class="btn btn-danger" asp-controller="Customer" asp-action="DeleteRequest">مسح الطلب</button>
                              </div>
                            </div>
                          </div>
                        </div>
                }



          </div>
          
        </div>
      </div>
    </div>

